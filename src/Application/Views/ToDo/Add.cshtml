@model Entities.ToDo
@{
    ViewData["Title"] = "Adicionar";
}

<div class="card">
    <div class="card-header">Tarefas a fazer</div>
    <div class="card-body">
        @using (Html.BeginForm("Add", "ToDo", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(t => t.Task, new { @class = "control-label"})
                @Html.TextBoxFor(t => t.Task, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(t => t.Description, new { @class = "control-label"})
                @Html.TextBoxFor(t => t.Description, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(t => t.Forecast, new { @class = "control-label"})
                @Html.TextBoxFor(t => t.Forecast, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-primary">Salvar</button>
            <a href="@Url.Action("Index", "Task")" class="btn btn-default">Cancelar</a>
        }
    </div>
</div>