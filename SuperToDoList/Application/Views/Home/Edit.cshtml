@model Entities.Todo
@{
    ViewData["Title"] = "Editar";
}

<div class="card">
    <div class="card-header">Tarefas a fazer</div>
    <div class="card-body">
        @using (Html.BeginForm("Edit", "Home", FormMethod.Post))
        {
            <div class="form-group">
                <label>Tarefa</label>
                @Html.TextBoxFor(d => d.Task, new { @class = "form-control" })
            </div>

            <button type="submit" class="btn btn-primary">Salvar</button>
            <a href="@Url.Action("Index", "Home")" class="btn btn-light">Cancelar</a>
        }
    </div>
</div>